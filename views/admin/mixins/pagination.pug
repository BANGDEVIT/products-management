mixin pagination(pagination)
  nav
    ul(class="pagination")
      if (pagination.currentPage > 1)
        li(class="page-item")
          button(
            class="page-link"
            button-pagination = pagination.currentPage -1
          ) Trang trước
      else 
        li(class="page-item")
          button(
            class="page-link"
            button-pagination = pagination.totalPages
          ) Đến trang cuối cùng

      - for (var i = pagination.currentPage-1; i <= pagination.currentPage +1; i++)
        if (i <= pagination.totalPages && i > 0)
          li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`) 
            button(
              class="page-link",
              button-pagination = i
            ) #{i}
        
      if (pagination.currentPage < pagination.totalPages)
        li(class="page-item")
          button(
            class="page-link"
            button-pagination = pagination.currentPage +1,
          ) Trang sau
      else 
        li(class="page-item")
          button(
            class="page-link"
            button-pagination = 1,
          ) Trang về Trang đầu