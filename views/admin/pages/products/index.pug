extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-mutil.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug


block main 
  +alert-success("5000")

  if (role && role.permissions && role.permissions.includes("products_view"))
  
    h1 Danh sách sản phẩm

    .card.mb-3 
      .card-header Bộ lọc và tìm kiếm
      .card-body 
        .row
          .col-4
            +filter-status(filterStatus)
          .col-8
            +search(keyword)
    .card.mb-3 
    .card-header Sắp xếp 
    .card-body 
      .row 
        .col-4
          +sort()

    .card.mb-3 
      .card-header Danh sách
        .card-body
          .row 
            .col-8
              +form-change-mutil(`${prefixAdmin}/products/change-mutil?_method=PATCH`)
            .col-4
              a(
                href=`${prefixAdmin}/products/create`
                class="btn btn-outline-success"
              ) +Thêm mới 

          table(
            class="table table-hover table-sm",
            checkbox-mutil
          )
            thead 
              tr 
                th 
                  input(type="checkbox" name="checkall")
                th STT
                th hình ảnh
                th tiêu đề 
                th giá 
                th vị trí
                th trạng thái
                th Người tạo
                th Người sửa 
                th hành động 

            tbody
              each item,index in products 
                tr 
                  td 
                    input(
                      type="checkbox",
                      name="id",
                      value=item.id
                      )
                  td #{(pagination.limitItems) *(pagination.currentPage -1 ) +(index + 1)}
                  td 
                    img(
                      src= item.thumbnail,
                      alt= item.title,
                      width="100px",
                      height="auto"
                    )
                  td #{item.title}
                  td #{item.priceNew}$
                  td 
                    input(
                      type="number",
                      value=item.position,
                      name="position",
                      style="width:60px",
                      min ="1"
                    )
                  td
                    if (item.status == "active")
                      a(
                        href="javascript:;"
                        data-status= item.status
                        data-id = item.id 
                        button-change-status
                        class="badge badge-success"
                        ) Hoạt động 
                    else  
                      a(
                      href="javascript:;"
                      data-status = item.status
                      data-id = item.id 
                      button-change-status
                      class="badge badge-danger"
                      ) Dừng hoạt động 
                  td 
                    p #{item.accountFullName}
                    if (item.createdBy.createdAt)
                      p #{moment(item.createdBy.createdAt).format("DD/MM/YYYY h:mm:ss")} 
                  td
                    - const updatedBy = item.updatedBy.slice(-1)[0]
                    if (updatedBy) 
                      p #{updatedBy.accountFullName}
                      if (updatedBy.updatedAt)
                        p #{moment(updatedBy.createdAt).format("DD/MM/YYYY h:mm:ss")} 
                  td
                    a(
                      class="btn btn-secondary btn-sm"
                      href=`${prefixAdmin}/products/detail/${item.id}`
                    ) Chi tiết
                    if (role.permissions.includes("products_edit")) 
                      a(
                        class="btn btn-warning btn-sm ml-1"
                        href=`${prefixAdmin}/products/edit/${item.id}`
                      ) sửa
                    if (role.permissions.includes("products_delete")) 
                      button(
                        class="btn btn-danger btn-sm ml-1",
                        button-delete,
                        data-id =item.id
                      ) xóa

    +pagination(pagination)

    form(
      action='',
      method="POST",
      id ="form-change-status",
      data-path =`${prefixAdmin}/products/change-status`
    ) 

    form(
    action='',
    method="POST",
    id ="form-delete-item",
    data-path =`${prefixAdmin}/products/delete`
    ) 

    script(src="/admin/js/product.js") 
  else 
    h1(class="text-center") Bạn không có quyền truy cập vào trang này.
      