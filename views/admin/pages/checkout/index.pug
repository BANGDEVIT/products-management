extends ../../layouts/default.pug
//- include ../../mixins/filter-status.pug
include ../../mixins/pagination.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug




block main 

  //- if (role && role.permissions && role.permissions.includes("products_view"))

  if ( 1 == 1 )

    h1 Danh sách đơn hành

    //- .card.mb-3 
    //- .card-header Sắp xếp 
    //- .card-body 
    //-   .row 
    //-     .col-4
    //-       +sort()

    .card.mb-3 
      .card-header Danh sách đơn hàng
        .card-body
          table(
            class="table table-hover table-sm",
            checkbox-mutil
          )
            thead 
              tr 
                th STT
                th Họ và tên
                th điện thoại
                th địa chỉ 
                th Sản phẩm 

            tbody
              each item,index in orders
                tr 
                  //- td #{(pagination.limitItems) *(pagination.currentPage -1 ) +(index + 1)}
                  td #{index +1}
                  td #{item.userInfo.fullName}
                  td #{item.userInfo.phone}
                  td #{item.userInfo.address}
                  td 
                    each product in item.products
                      table(
                        class="table table-hover table-sm",
                        checkbox-mutil
                      )
                        thead 
                          tr
                            th STT
                            th Hình ảnh 
                            th Tên sản phẩm 
                            th Giá 
                            th Số lượng
                            th Tổng giá 
                        tbody
                          each product,index in item.products
                            tr 
                              //- td #{(pagination.limitItems) *(pagination.currentPage -1 ) +(index + 1)}
                              td #{index +1}
                              td 
                                img(
                                  src= product.thumbnail,
                                  alt= product.title,
                                  width="100px",
                                  height="auto"
                                )
                              td #{product.title}
                              td #{product.newPrice}
                              td #{product.quantity}
                              td #{product.quantity *product.newPrice }

    //- +pagination(pagination)

    //- form(
    //-   action='',
    //-   method="POST",
    //-   id ="form-change-status",
    //-   data-path =`${prefixAdmin}/products/change-status`
    //- ) 

    //- form(
    //- action='',
    //- method="POST",
    //- id ="form-delete-item",
    //- data-path =`${prefixAdmin}/products/delete`
    //- ) 

    script(src="/admin/js/product.js")
    script(src="/admin/js/script.js")  
  else 
    h1(class="text-center") Bạn không có quyền truy cập vào trang này.
