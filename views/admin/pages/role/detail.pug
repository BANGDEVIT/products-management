extends ../../layouts/default.pug

block main 
  if (role && role.permissions && role.permissions.includes("products-category_view"))
    h1(class="mb-4") chi tiết nhóm quyền  

    if(record.title)
      div(class="mb-4") Tên nhóm quyền: <b>#{record.title}</b>
    
    if(record.description)
      div(class="mb-4") mô tả :  #{record.description}

    if(record.permissions)
      each item in record.permissions
        div(class="mb-4") quyền :  #{item}

    if(record.status)
      div(class="mb-4")
        span Trạng thái: 
          if(record.status === "active")
            span(class="badge badge-success") Hoạt động
          else
            span(class="badge badge-danger") Dừng hoạt động

    a(
      class="btn btn-warning btn-lg ml-1"
      href=`${prefixAdmin}/roles/edit/${record.id}`
    ) sửa 

    script(src="/admin/js/product.js")
  else 
    h1(class="text-center") Bạn không có quyền truy cập vào trang này.