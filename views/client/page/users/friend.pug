extends ../../layout/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
  +alert-success(5000)
  +alert-error(5000)

  .container.my-3

    include ../../partials/list-btn-users.pug

    .row 
      .col-12 
        +box-head("Danh sách bạn bè")

    .row(data-users-friend = user.id)
      each user in users
        .col-6(user-id = user.id)
          div(class="box-user add")
            div(class="inner-avatar")
              img(
                src= (user.avatar ? user.avatar : "https://cdn.kona-blue.com/upload/kona-blue_com/post/images/2024/09/18/457/avatar-mac-dinh-1.jpg")
                alt=user.fullName
              )
            div(class="inner-info")
              div(class="inner-name") #{user.fullName}
              div(class="inner-buttons")
                a(
                  href="#"
                  class="btn btn-primary btn-sm mr-1" 
                ) Nhắn tin
            div(
              class="inner-status"
              status = user.statusOnline
            ) <i class="fa-solid fa-circle"></i>
block script 
  script(src="/js/user.js")   
