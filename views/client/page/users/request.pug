extends ../../layout/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
  +alert-success(5000)
  +alert-error(5000)

  .container.my-3

    include ../../partials/list-btn-users.pug

    .row 
      .col-12 
        +box-head("Lời mời đã gửi")

    .row
      each user in users
        .col-6 
          div(class="box-user add")
            div(class="inner-avatar")
              img(
                src= (user.avatar ? user.avatar : "https://cdn.kona-blue.com/upload/kona-blue_com/post/images/2024/09/18/457/avatar-mac-dinh-1.jpg")
                alt=user.fullName
              )
            div(class="inner-info")
              div(class="inner-name") #{user.fullName}
              div(class="inner-buttons")
                button(
                  class="btn btn-sm btn-primary mr-1"
                  btn-add-friend = user.id
                ) Kết bạn 
                button(
                  class="btn btn-sm btn-secondary mr-1"
                  btn-cancel-friend = user.id
                ) Hủy
//- add friends
block script 
  script(src="/js/user.js")   
